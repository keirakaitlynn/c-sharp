@model List<MovieKW>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Movie List</h2>
<a asp-controller="MovieKW" asp-action="Add">Add New Movie</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Name</th><th>Year</th><th>Rating</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>
                    <a asp-controller="MovieKW" asp-action="EditKW"
                       asp-route-id="@movie.MovieId">Edit</a>
                    <a asp-controller="MovieKW" asp-action="DeleteKW"
                       asp-route-id="@movie.MovieId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>